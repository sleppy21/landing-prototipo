{
  "name": "Fashion Store Integrated",
  "version": "1.0.0",
  "description": "Landing page con bot de chat integrado profesionalmente",
  "author": "Fashion Store Team",
  "
": {
    "landing": {
      "port": 3000,
      "fallback_port": 8080,
      "serve_command": "http-server",
      "serve_args": ". -p {port} -c-1 --silent"
    },
    "bot": {
      "port": 5000,
      "python_script": "proyecto-bot-main/app.py",
      "venv_path": "proyecto-bot-main/venv",
      "requirements": "proyecto-bot-main/requirements.txt"
    },
    "development": {
      "auto_open_browser": true,
      "monitor_services": true,
      "log_directory": "logs",
      "backup_directory": "backup"
    }
  },
  "urls": {
    "landing": "http://localhost:{landing_port}",
    "bot": "http://localhost:{bot_port}",
    "health_check": "http://localhost:{bot_port}/health"
  },
  "files": {
    "landing_files": [
      "index.html",
      "css/style.css",
      "css/chat-integration.css",
      "js/main.js",
      "js/chat-integration.js"
    ],
    "bot_files": [
      "proyecto-bot-main/app.py",
      "proyecto-bot-main/requirements.txt",
      "proyecto-bot-main/static/styles.css",
      "proyecto-bot-main/templates/index.html"
    ],
    "cleanup_targets": [
      "*.tmp",
      "*.bak",
      "*.log",
      "*.cache",
      "Thumbs.db",
      ".DS_Store",
      "__pycache__",
      "*.pyc"
    ]
  },
  "features": {
    "chat_integration": true,
    "responsive_design": true,
    "dark_mode": true,
    "analytics": true,
    "pwa_ready": true,
    "offline_support": false
  },
  "theme": {
    "primary_color": "#111111",
    "accent_color": "#ca8a04",
    "background_light": "#fafafa",
    "background_dark": "#111111",
    "text_light": "#111111",
    "text_dark": "#ffffff"
  },
  "deployment": {
    "staging": {
      "landing_url": "https://staging-landing.example.com",
      "bot_url": "https://staging-bot.example.com"
    },
    "production": {
      "landing_url": "https://fashion-store.example.com",
      "bot_url": "https://bot-api.fashion-store.example.com"
    }
  },
  "scripts": {
    "start": "start-fashion-store.bat",
    "quick": "quick-start.bat",
    "clean": "cleanup.bat",
    "dev": "quick-start.bat"
  },
  "dependencies": {
    "system": [
      "Python 3.8+",
      "Node.js (optional)",
      "Modern browser"
    ],
    "python": [
      "flask>=3.0.0",
      "torch",
      "transformers",
      "sentence-transformers",
      "langchain"
    ],
    "node": [
      "http-server (optional)"
    ]
  },
  "maintenance": {
    "logs_retention_days": 7,
    "cache_cleanup_interval": "weekly",
    "backup_retention": 3,
    "health_check_interval": 30
  }
}